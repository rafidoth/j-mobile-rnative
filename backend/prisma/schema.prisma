generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Set {
  id         String    @id @default(uuid())
  userId     String?
  user       User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  visibility String
  title      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  questions  Question[]

  @@index([userId])
}

model Question {
  id          String   @id @default(uuid())
  setId       String
  set         Set      @relation(fields: [setId], references: [id], onDelete: Cascade)
  text        String
  type        String
  difficulty  String
  choices     Json
  answer      String
  answerIdx   Int
  explanation String?
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([setId, position])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sets      Set[]
}
